<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MapSelectionScreen">


    <!-- Header aligned to top -->

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/valorant_color"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/ascent_name"
            android:textColor="#000"
            android:textSize="24sp" />
    </RelativeLayout>

    <HorizontalScrollView

        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/Ability Bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageButton
                style="?attr/buttonBarButtonStyle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/recon_dart"
                android:contentDescription="Recon Arrow"
                app:backgroundTint="@color/recon_dart_color"
                tools:ignore="HardcodedText" />

            <ImageButton
                style="?attr/buttonBarButtonStyle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shock_bolt"
                android:contentDescription="Shock Bolt Arrow"
                app:backgroundTint="@color/shock_bolt_color"
                tools:ignore="HardcodedText" />

            <ImageButton
                style="?attr/buttonBarButtonStyle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/poison_cloud"
                android:contentDescription="Poison Cloud"
                app:backgroundTint="@color/poison_cloud_color"
                tools:ignore="HardcodedText" />

            <ImageButton
                style="?attr/buttonBarButtonStyle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/snake_bite"
                android:contentDescription="Snake Bite"
                app:backgroundTint="@color/snake_bite_color"
                tools:ignore="HardcodedText" />

            <ImageButton
                style="?attr/buttonBarButtonStyle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/slow_orb"
                android:contentDescription="Slow Orb"
                app:backgroundTint="@color/slow_orb_color"
                tools:ignore="HardcodedText" />

            <ImageButton
                style="?attr/buttonBarButtonStyle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/hot_hands"
                android:contentDescription="Hot Hands"
                app:backgroundTint="@color/hot_hands_color"
                tools:ignore="HardcodedText" />

        </LinearLayout>


    </HorizontalScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"

        android:paddingTop="?attr/actionBarSize"
        tools:ignore="ExtraText">
        tools:context=".MainActivity">

        <!-- used: https://www.geeksforgeeks.org/videoview-in-kotlin/ -->


        <VideoView
            android:id="@+id/sovaVideoView"
            android:layout_width="331dp"
            android:layout_height="160dp"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/recon_arrow_haven_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="133dp"
            android:background="@drawable/recon_dart"
            android:contentDescription="recon_arrow_haven_1"
            android:translationX="140dp"
            android:translationY="420dp"
            app:backgroundTint="@color/recon_dart_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/haven_map_picture"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/haven_map_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/Haven_Map_Picture"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/valorant_haven_map" />


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu">


            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/nav_host_fragment"
                android:name="androidx.navigation.fragment.NavHostFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:defaultNavHost="true"
                app:navGraph="@navigation/mobile_navigation" />

        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
