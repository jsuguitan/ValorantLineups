                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="@string/hello"
                android:textColor="#ffffff" />

            <!-- android:layout_height="wrap_content"-->
            <Button
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="@string/hello"
                android:textColor="#ffffff" />

            <!-- android:layout_height="wrap_content"-->
            <Button
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="@string/hello"
                android:textColor="#ffffff" />

            <!-- android:layout_height="wrap_content"-->
            <Button
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="@string/hello"
                android:textColor="#ffffff" />





        </LinearLayout>


    </ScrollView>
</LinearLayout>